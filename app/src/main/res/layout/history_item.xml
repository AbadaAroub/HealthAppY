<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <LinearLayout
            android:id="@+id/history_item_root_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingLeft="20sp">

            <TextView
                android:id="@+id/history_item_root_when_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="2023-09-30.12:30"
                android:textColor="@color/black"
                android:paddingRight="20sp"
                />
            <ImageView
                android:id="@+id/history_item_root_when_ate"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/checkmark" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/history_item_root_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/history_item_root_info_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Lunch"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/history_item_root_info_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingLeft="20sp"
                android:text="Pannkakor med krÃ¤mmmmm.."
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

</LinearLayout>