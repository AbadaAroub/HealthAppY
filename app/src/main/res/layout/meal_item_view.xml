<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/lightblue"
    android:padding="10dp"
    android:elevation="2dp"
    android:translationZ="2dp"
    >
    
    <TextView
        android:id="@+id/tvItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-10-11"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvItemDate"
        android:layout_alignBaseline="@+id/tvItemDate"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tvItemMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MELLANMÃ…L"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tvItemTime"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tvItemComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textStyle="italic"
        android:layout_below="@+id/tvItemDate"
        />


</RelativeLayout>