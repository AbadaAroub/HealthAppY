<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupElderly">

        <ImageView
            android:id="@+id/logphotoeld"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/loginphoto" />

        <EditText
            android:id="@+id/usernameeld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logphotoeld"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="@string/full_name"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emaileld"
            android:layout_below="@+id/usernameeld"
            android:background="@color/blue"
            android:hint="@string/email"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileNumbereld"
            android:layout_below="@+id/emaileld"
            android:background="@color/blue"
            android:hint="@string/mobile_number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="20dp"
            android:inputType="phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addresseld"
            android:layout_below="@+id/mobileNumbereld"
            android:background="@color/blue"
            android:hint="@string/address"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:drawablePadding="20dp"
            android:inputType="textPostalAddress"/>

        <EditText
            android:id="@+id/signuppasseld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addresseld"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blue"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_key_24"
            android:drawablePadding="20dp"
            android:hint="4 digit PIN"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/signupeld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signuppasseld"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:text="@string/signup"
            android:textSize="25dp" />

</RelativeLayout>