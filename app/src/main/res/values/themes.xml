<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthAppY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.HealthAppY" parent="Base.Theme.HealthAppY" />



    <style name="Theme.HealthAppY.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthAppY.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HealthAppY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:backgroundTint">@color/lightgray</item>
        <item name="android:buttonBarStyle">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogButtonBar" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Set the button background color here -->
        <item name="android:datePickerDialogTheme">@color/blue</item>
    </style>

</resources>